	<xs:complexType name="GetCcbIdService">
		<xs:annotation>
			<xs:documentation>Typdefinition Dienst RangerBestandskundenPruefung</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="base:ProviderService">
				<xs:choice>
					<xs:element name="GetCcbIdInput" type="GetCcbIdInput"/>
					<xs:element name="GetCcbIdOutput" type="GetCcbIdOutput">
						<xs:annotation>
							<xs:documentation>Handelt es sich eindeutig um einen Bestandskunden, so beinhaltet das Element result den Wert "true. In diesem Fall wird seine Kundenummer mit zurückgegeben. Beinhaltet das Element result den Wert "false", so ist eine weitere Aufschlüsselung im Element "errorCode" (und eine entsprechende textuelle Beschreibung im Element errorText) gegeben:
								
								1 ... es handelt sich eindeutig um keinen Bestandskunden
								2 ... es ist nicht ermittelbar, ob Bestandskunde oder nicht. In diesem Fall kann eine oder mehrere Kundennummern zurückgegeben werden.
								
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:choice>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="GetCcbIdInput">
		<xs:annotation>
			<xs:documentation/>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="base:InputData">
				<xs:sequence>
					<xs:element name="rufnummer" type="rufnummer:Kontaktrufnummer"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="GetCcbIdOutput">
		<xs:annotation>
			<xs:documentation/>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="base:OutputData">
				<xs:sequence>
					<xs:element name="customerNumber" type="common:Kundennummer" minOccurs="0"/>
					<xs:element name="serviceSubscriptionId" type="xs:string" minOccurs="0"/>
					<xs:element name="bundleId" type="xs:string" minOccurs="0"/>
					<xs:element name="accountNumber" type="common:Rechnungskontonummer" minOccurs="0"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
